@model ABCPortfolio.Models.Admin

<!DOCTYPE html>
<html class="h-100" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABCPortfolio</title>
    <link rel="shortcut icon" href="/img/softoweb.png">
    <!-- GOOGLE FONTS CDN LINK -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    @*<link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;600;700;800&family=Teko:wght@400;500;600;700&display=swap" rel="stylesheet">*@
    <!-- CSS LINK -->
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- AOS ANIAMATION PLUGIN -->
    <link rel="stylesheet" href="/css/animate.css">
    <!-- OWL CAROUSEL PLUGIN -->
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">
    <!-- MAGNIFIC POPUP PLUGIN -->
    <link rel="stylesheet" href="/css/magnific-popup.css">
    <link rel="stylesheet" href="/css/custom.css">

    <!-- Toastr CSS -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha512-nq1+Q0MhMbDsgaJYdCnyD3k19qn6g3BRwC7Vj1X7XsZK4WqarGn1qNNElMiDzTXvlNqgJqHY2lwDzrR0EjO0tQ==" crossorigin="anonymous" />

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.min.js" integrity="sha512-8VdeZcI63BBb4dqXys7htH/CcifgClQ1g+D4WbrvnQ9XhczGQ6ge0cRZUZ9FlI/K6btWJ+5iEXHix0RGDVT3ew==" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha512-nq1+Q0MhMbDsgaJYdCnyD3k19qn6g3BRwC7Vj1X7XsZK4WqarGn1qNNElMiDzTXvlNqgJqHY2lwDzrR0EjO0tQ==" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.min.js" integrity="sha512-8VdeZcI63BBb4dqXys7htH/CcifgClQ1g+D4WbrvnQ9XhczGQ6ge0cRZUZ9FlI/K6btWJ+5iEXHix0RGDVT3ew==" crossorigin="anonymous"></script>


</head>
<body class="h-100 bg-light">
    <div asp-validation-summary="All" class="bg-grey w-100 h-100 text-danger d-flex justify-content-center align-items-center">
    
            <form action="LoginUsers" class="shadow col-md-4 border rounded bg-white">
                
                <div class="form-group m-3">
                <label class="text-secondary">Username</label>
                    <input type="text" class="form-control" placeholder="Enter Username"
                           asp-for="UserName" />
                </div>
                <div class="form-group m-3">
                <label class="text-secondary">Password</label>
                    <input type="password" class="form-control" placeholder="Enter Your Password"
                           asp-for="Password" />

                </div>
            <div class="d-flex justify-content-center w-100 mb-3">
                <button class="pl-3 pr-3 rounded btn-primary">
                    Submit
                </button>
                </div>

            </form>
 
    </div>
</body>
 
</html>