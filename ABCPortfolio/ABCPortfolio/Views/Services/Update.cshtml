@model ServiceCreateVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">

    <div>
        <h3>Update Services</h3>
    </div>
</div>
<form method="post" enctype="multipart/form-data" asp-controller="Services" asp-action="Update" class="m-4">

    <input asp-for="Id" hidden/>
    <div class="form-group row">
        <label asp-for="Title">Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" placeholder="Enter Name" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>    <div class="form-group row">
        <label asp-for="Description">Description</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Images">Image</label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Images" class="form-control custom-file-input" style="opacity:100" type="file" />
            </div>
        </div>
    </div>

    <input type="submit" value="Update" class="btn btn-primary" />
</form>
