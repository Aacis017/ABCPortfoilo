@model ParentServiceVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">

    <div>
        <h3>Services form</h3>
    </div>
</div>
<form method="post" enctype="multipart/form-data" asp-controller="Services" asp-action="Create" class="m-4">
    <div class="form-group row">
        <label asp-for="@Model.createService.Title">Title</label>
        <div class="col-sm-10">
            <input asp-for="@Model.createService.Title" class="form-control" placeholder="Enter Name" />
            <span asp-validation-for="@Model.createService.Title" class="text-danger"></span>
        </div>
    </div>    <div class="form-group row">
        <label asp-for="@Model.createService.Description">Description</label>
        <div class="col-sm-10">
            <input asp-for="@Model.createService.Description" class="form-control" />
            <span asp-validation-for="@Model.createService.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.createService.Images">Image</label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="@Model.createService.Images" class="form-control custom-file-input" style="opacity:100" type="file" />
            </div>
        </div>
    </div>

    <input  type="submit" value="submit" class="btn btn-primary"/>
</form>


       
    @foreach (var item in Model.getService)
    {
        string imagepath = "/img/ServiceImage/" + item.ImageName;
        <div class="row ">
            <div class="col-4 jobs">
                <h4 class="mb-4">Service Title</h4>
                    <h2>@item.Title</h2> 
            </div>
            <div class="col-4">
               
                    <img src="@imagepath" alt="images" style="width:100%" />
             
            </div>
            <div class="col-4">
            <a asp-controller="Services" asp-action="DeleteService" class="btn btn-danger" asp-route-id="@item.Id">Delete </a>
            <a asp-controller="Services" asp-action="Update" class="btn btn-danger" asp-route-id="@item.Id">Update </a>
            </div>
        </div>
    }
