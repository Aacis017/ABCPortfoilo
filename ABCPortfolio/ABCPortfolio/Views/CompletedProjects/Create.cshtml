@model ABCPortfolio.ViewModel.CompletedProjectsVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form enctype="multipart/form-data" asp-action="Create" class="wow fadeInUpBig shadow p-3 mb-5 bg-white rounded" data-wow-duration="1.5s">
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="text" class="form-control" placeholder="Title of Project" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <input type="text" class="form-control" placeholder="Description" asp-for="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <div class="custom-file">
                <input asp-for="Imageforproject" class="form-control custom-file-input" style="opacity:100" />
            </div>
            <span asp-validation-for="Imageforproject" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn layer-btn">Add</button>
</form>